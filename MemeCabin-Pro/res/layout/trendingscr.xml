    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/adview"
        android:visibility="gone" >
        
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/skipLogin_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_bar_height2"
        android:layout_alignParentBottom="true"
        android:background="@drawable/tedingmiddle"
        android:orientation="horizontal" >

        <com.aacom.memecabin.utils.CustomImageViewLargeHeight        android:id="@+id/tenScrHome_im"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/loghome" />

        <com.aacom.memecabin.utils.CustomImageViewLargeHeight        android:id="@+id/preBottmBack1_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:src="@drawable/refresh"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:padding="2dp" >

            <com.aacom.memecabin.utils.CustomImageViewLargeHeight            android:id="@+id/tenScrPref_im"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:padding="@dimen/badger_text_margin"
                android:src="@drawable/preferehome" />

            <com.aacom.memecabin.utils.CustomImageViewLargeHeight            android:id="@+id/tenScrLike_im"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tenScrPref_im"
               
                android:src="@drawable/tedstar" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlDecide"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/transparent"
        android:visibility="gone" >

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            layout="@layout/decide_login" />
    </RelativeLayout>

</RelativeLayout>