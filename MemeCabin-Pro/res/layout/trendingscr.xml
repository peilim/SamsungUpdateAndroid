<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.memecabin.pro.MainActivity$PlaceholderFragment" >

    <RelativeLayout
        android:id="@+id/topbar_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:layout_alignParentTop="true"
        android:background="@drawable/tedingtopbar" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/tenScrback_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <com.aacom.memecabin.utils.CustomImageViewLargeHeight                android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:padding="@dimen/swipe_screen_top_right_padding"
                    android:src="@drawable/back" />
            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:orientation="vertical"
                android:scaleType="centerInside"
                android:src="@drawable/topbactext" >
            </ImageView>

            <LinearLayout
                android:id="@+id/tenScrSlide_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right" >

                <com.aacom.memecabin.utils.CustomImageViewLargeHeight                android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/swipe_screen_top_right_padding"
                    android:src="@drawable/rebonlogo" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/logooId_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topbar_rl" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/settingbtpadding"
                    android:layout_marginRight="@dimen/marginracypopuptop"
                    android:src="@drawable/tredingpup" />

                <ImageView
                    android:id="@+id/imgMemsForEveryTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tedingrite" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llListholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/skipLogin_ll"
        android:layout_below="@+id/logooId_rl"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/topOption_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/tenScrToptodays_ll"
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                 android:layout_marginTop="10dp"
                android:background="@drawable/teding2"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/trending_text_padding_top_bottom"
                android:paddingTop="@dimen/trending_text_padding_top_bottom" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/trending_text_padding_top_bottom"
                    android:paddingTop="@dimen/trending_text_padding_top_bottom"
                    android:text="@string/tomMemes"
                    android:textColor="@color/white"
                    android:textSize="@dimen/preferencetexhead"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingRight="3dp"
                    android:paddingBottom="@dimen/trending_text_padding_top_bottom"
                    android:paddingTop="@dimen/trending_text_padding_top_bottom"
                    android:text="Last 24 Hours"
                    android:textColor="@color/white"
                    android:textSize="@dimen/preferencetexhead"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tenScrTop7_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/teding1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/trending_text_padding_top_bottom"
                android:paddingTop="@dimen/trending_text_padding_top_bottom" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/trending_text_padding_top_bottom"
                    android:paddingTop="@dimen/trending_text_padding_top_bottom"
                    android:text="@string/tomMemes"
                    android:textColor="@color/white"
                    android:textSize="@dimen/preferencetexhead"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/trending_text_padding_top_bottom"
                    android:paddingTop="@dimen/trending_text_padding_top_bottom"
                    android:text="@string/last7Days"
                    android:textColor="@color/white"
                    android:textSize="@dimen/preferencetexhead"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tenScrTop30_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/teding2"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/trending_text_padding_top_bottom"
                android:paddingTop="@dimen/trending_text_padding_top_bottom" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/trending_text_padding_top_bottom"
                    android:paddingTop="@dimen/trending_text_padding_top_bottom"
                    android:text="@string/tomMemes"
                    android:textColor="@color/white"
                    android:textSize="@dimen/preferencetexhead"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/trending_text_padding_top_bottom"
                    android:paddingTop="@dimen/trending_text_padding_top_bottom"
                    android:text="@string/last30Days"
                    android:textColor="@color/white"
                    android:textSize="@dimen/preferencetexhead"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tenScrTop90_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/teding1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/trending_text_padding_top_bottom"
                android:paddingTop="@dimen/trending_text_padding_top_bottom" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/trending_text_padding_top_bottom"
                    android:paddingTop="@dimen/trending_text_padding_top_bottom"
                    android:text="@string/tomMemes"
                    android:textColor="@color/white"
                    android:textSize="@dimen/preferencetexhead"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/trending_text_padding_top_bottom"
                    android:paddingTop="@dimen/trending_text_padding_top_bottom"
                    android:text="@string/last90Days"
                    android:textColor="@color/white"
                    android:textSize="@dimen/preferencetexhead"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/last2days_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone" >

                <include
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    layout="@layout/trend2daystop_include" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/last7days_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone" >

                <include
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    layout="@layout/trendlast7_include" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/last30days_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone" >

                <include
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    layout="@layout/trendlast30_include" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/last90days_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone" >

                <include
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    layout="@layout/trendlast90_include" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
    
    
