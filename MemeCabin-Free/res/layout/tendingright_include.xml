<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal|center_vertical"
    tools:context="com.memecabin.free.MainActivity$PlaceholderFragment" >

 <RelativeLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:gravity="center" >

        <LinearLayout
            android:id="@+id/tendingpopuphead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/markall"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/afterswipeCon"
                android:textColor="@color/bagoni"
                android:textSize="@dimen/dialogleftheader"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/whattodo"
                android:textColor="@color/gray"
                android:paddingBottom="@dimen/home_coming_soon_padding"
                android:textSize="@dimen/dialogleftsubheaer" />
        </LinearLayout>



            <LinearLayout
                android:id="@+id/trenHere_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tendingpopuphead"
                android:layout_alignLeft="@+id/tendingpopuphead"
                android:layout_alignRight="@+id/tendingpopuphead"
                android:background="@drawable/markall_2"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                  
                    android:text="@string/keepme"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dialogleftheader"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/trenFirst_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trenHere_ll"
                android:layout_alignLeft="@+id/trenHere_ll"
                android:layout_alignRight="@+id/trenHere_ll"
                android:background="@drawable/markall_2"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                   
                    android:text="@string/backFirst"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dialogleftheader"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/trenfavri_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trenFirst_ll"
                android:layout_alignLeft="@+id/trenFirst_ll"
                android:layout_alignRight="@+id/trenFirst_ll"
                android:background="@drawable/markall_2"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/home_coming_soon_padding"
                    android:text="@string/viewFavourites"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dialogleftheader"
                    android:textStyle="bold" />
            </LinearLayout>
        
    </RelativeLayout>

</RelativeLayout>